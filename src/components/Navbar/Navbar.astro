---
import react from 'react'
import { Button } from 'legion-react'
import 'legion-react/dist/style.css'
---

<nav class="navbar">
    <div class="container navbar-content">
        <a href="#" class="logo">
            <div class="logo-icon"></div>
            Untitled UI
        </a>
        <div class="nav-links">
            <a href="#">About</a>
            <a href="#">Design</a>
            <a href="#">Development</a>
        </div>
        <div class="nav-links">
            <a href="#">Mobile Playground</a>
            <Button client:only="react">Getting Started</Button>
        </div>
    </div>
</nav>

<style>
     /* Navbar styles */
     
     .navbar {
        border-bottom: 1px solid #e5e7eb;
        padding: 1rem 0;
    }
    .navbar-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .logo {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #333;
        font-weight: 600;
        font-size: 1.25rem;
    }
    .logo-icon {
        width: 32px;
        height: 32px;
        background-color: #8b5cf6;
        border-radius: 50%;
        margin-right: 0.5rem;
    }
    .nav-links {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        align-items: center;
    }
    .nav-links a {
        text-decoration: none;
        color: #4b5563;
    }
    .nav-links a:hover {
        color: #111827;
    }
    .nav-links .cta-button {
        background-color: #8b5cf6;
        padding: 0.5rem 1rem;
        border-radius: 0.375rem;
        text-decoration: none;
        color: white;
        font-weight: 500;
    }
    .cta-button:hover {
        background-color: #7c3aed;
    }
        /* Responsive styles */
        @media (max-width: 768px) {
        .nav-links {
            display: none;
        }
    }
</style>