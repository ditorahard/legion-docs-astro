---
const {componentsLink} = Astro.props;

---
<nav class="sidebar">
  <h2 class="sidebar-title">My Design System</h2>
  <ul class="sidebar-menu">
    <li><a href="/">Home</a></li>
    <li><a href="/getting-started">Getting Started</a></li>
    <li>
      <span>Components</span>
      <ul>
        {componentsLink && componentsLink.map(component => (
          <li><a href={component?.slug}>{component?.data?.title}</a></li>
        ))}
      </ul>
    </li>
  </ul>
</nav>

<style>
  .sidebar {
    width: 250px;
    background-color: #f4f4f4;
    padding: 2rem;
    height: 100vh;
    overflow-y: auto;
    position: sticky;
    top: 0;
  }

  .sidebar-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .sidebar-menu {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .sidebar-menu ul {
    list-style-type: none;
    padding-left: 1rem;
  }

  .sidebar-menu li {
    margin-bottom: 0.5rem;
  }

  .sidebar-menu a {
    color: #333;
    text-decoration: none;
  }

  .sidebar-menu a:hover {
    text-decoration: underline;
  }
</style>