---
const sections = [
  {
    title: 'Getting started',
    items: [
      { title: 'Overview', href: '/overview', active: true },
      { title: 'Installation', href: '/installation' },
      { title: 'Usage', href: '/usage' },
      { title: 'Tutorial', href: '/tutorial' },
      { title: 'Templates', href: '/templates' },
      { title: 'Roadmap', href: '/roadmap' },
      { title: 'Support', href: '/support' }
    ]
  },
  {
    title: 'Main features',
    items: [
      { title: 'Global variants', href: '/global-variants' },
      { title: 'Color inversion', href: '/color-inversion' },
      { title: 'Automatic adjustment', href: '/automatic-adjustment' },
      { title: 'Dark mode optimization', href: '/dark-mode' }
    ]
  },
  {
    title: 'Components',
    items: [
      { title: 'Button', href: '/components/button' },
      { title: 'Input', href: '/components/input' }
    ]
  }
];
---

<aside class="sidebar">
  <nav class="sidebar-nav">
    {sections.map(section => (
      <div class="nav-section">
        <h3 class="section-title">{section.title}</h3>
        <ul class="nav-items">
          {section.items.map(item => (
            <li>
              <a 
                href={item.href}
                class={`nav-link ${item.active ? 'active' : ''}`}
              >
                {item.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </nav>
</aside>

<style>
  .sidebar {
    width: 240px;
    height: calc(100vh - 64px); /* Subtract navbar height */
    position: fixed;
    top: 64px; /* Start below navbar */
    left: 0;
    background: #fff;
    border-right: 1px solid #e5e7eb;
    overflow-y: auto; /* Make the sidebar scrollable */
    padding: 1rem;
    box-sizing: border-box; /* Include padding in the width calculation */
  }

  .sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .nav-section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .section-title {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    color: #6b7280;
    padding: 0.5rem 0.75rem;
    margin: 0;
  }

  .nav-items {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .nav-link {
    display: block;
    padding: 0.5rem 0.75rem;
    color: #374151;
    text-decoration: none;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    transition: background-color 0.2s, color 0.2s;
  }

  .nav-link:hover {
    background-color: #f3f4f6;
  }

  .nav-link.active {
    background-color: #e5e7eb;
    color: #111827;
    font-weight: 500;
  }

  /* Add some basic dark mode support */
  @media (prefers-color-scheme: dark) {
    .sidebar {
      background: #1f2937;
      border-color: #374151;
    }

    .section-title {
      color: #9ca3af;
    }

    .nav-link {
      color: #e5e7eb;
    }

    .nav-link:hover {
      background-color: #374151;
    }

    .nav-link.active {
      background-color: #374151;
      color: #fff;
    }
  }
</style>

