---
import Navbar from '../components/Navbar/Navbar2.astro';
import Sidebar from '../components/Sidebar/Sidebar2.astro';

interface Props {
  title: string;
  developer: any;
}

const { title, developer } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <div class="layout">
      <Sidebar developer={developer} />
      <main class="main-content">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: system-ui, -apple-system, sans-serif;
  }

  .layout {
    padding-top: 64px; /* Height of navbar */
    min-height: 100vh;
    display: flex; /* Add flex display */
  }

  .main-content {
    margin-left: 240px; /* Width of sidebar */
    padding: 2rem;
    flex: 1; /* Allow content to grow */
    min-height: calc(100vh - 64px); /* Subtract navbar height */
  }

  @media (max-width: 768px) {
    .main-content {
      margin-left: 0;
    }
  }

  @media (prefers-color-scheme: dark) {
    body {
      background: #111827;
      color: #fff;
    }
  }
</style>

